
@{
    var isAdmin = (await authorizationService.AuthorizeAsync(User, "Admins")).Succeeded;
    var isManager = (await authorizationService.AuthorizeAsync(User, "Managers")).Succeeded;
}


<nav class="nav-links">
    <a class="nav-link @(Context.Request.Path=="/" ? "active": "")" asp-action="Index" asp-controller="Admin">
        <i class="fa-duotone fa-solid fa-chart-tree-map"></i>
        <span>Dashboard</span>
    </a>
    <a class="nav-link @(Context.Request.Path=="/admin/projects" ? "active": "")" asp-action="Projects" asp-controller="Admin">
        <i class="fa-duotone fa-solid fa-briefcase"></i>
        <span>Projects</span>
    </a>
    @if(isAdmin)
    {
        <a class="nav-link @(Context.Request.Path=="/admin/members" ? "active": "")" asp-action="Members" asp-controller="Admin">
            <i class="fa-duotone fa-solid fa-user-group"></i>
            <span>Team Members</span>
        </a>

    }
    @if (isManager)
    {
        <a class="nav-link @(Context.Request.Path=="/admin/clients" ? "active": "")" asp-action="Clients" asp-controller="Admin">
            <i class="fa-duotone fa-solid fa-handshake"></i>
            <span> Clients</span>
        </a>
    }
</nav>
